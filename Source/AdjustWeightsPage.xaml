            <TextBlock Canvas.Left="410" Canvas.Top="287" Text="{x:Bind Path=Last10WeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="317" Text="SOS Weight" Width="175" Height="20"/>
            <Slider x:Name="SosWeightSlider" Canvas.Left="185" Canvas.Top="310" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.SosRankWeight}" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.05" StepFrequency="0.05" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="317" Text="{x:Bind Path=SosWeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="347" Text="SOR Weight" Width="175" Height="20"/>
            <Slider x:Name="SorWeightSlider" Canvas.Left="185" Canvas.Top="340" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.SorRankWeight}" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.05" StepFrequency="0.05" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="347" Text="{x:Bind Path=SorWeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="377" Text="BPI Factor Weight" Width="175" Height="20"/>
            <Slider x:Name="BpiFactorWeightSlider" Canvas.Left="185" Canvas.Top="370" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.BpiFactorWeight}" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.05" StepFrequency="0.05" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="377" Text="{x:Bind Path=BpiFactorWeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="407" Text="Record Factor Weight" Width="175" Height="20"/>
            <Slider x:Name="RecordFactorWeightSlider" Canvas.Left="185" Canvas.Top="400" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.RecordFactorWeight}" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.05" StepFrequency="0.05" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="407" Text="{x:Bind Path=RecordFactorWeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="437" Text="Overall Factor Weight" Width="175" Height="20"/>
            <Slider x:Name="OverallFactorWeightSlider" Canvas.Left="185" Canvas.Top="430" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.OverallFactorWeight}" Minimum="0" Maximum="1" SmallChange="0.05" LargeChange="0.05" StepFrequency="0.05" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="437" Text="{x:Bind Path=OverallFactorWeightSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="467" Text="Field Goal Attempts" Width="175" Height="20"/>
            <Slider x:Name="FieldGoalAttemptsSlider" Canvas.Left="185" Canvas.Top="460" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.FieldGoalAttempts}" Minimum="0" Maximum="100" SmallChange="1" LargeChange="1" StepFrequency="1" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="467" Text="{x:Bind Path=FieldGoalAttemptsSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="497" Text="Three Point Attempts" Width="175" Height="20"/>
            <Slider x:Name="ThreePointAttemptsSlider" Canvas.Left="185" Canvas.Top="490" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.ThreePointAttempts}" Minimum="0" Maximum="100" SmallChange="1" LargeChange="1" StepFrequency="1" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="497" Text="{x:Bind Path=ThreePointAttemptsSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="527" Text="Free Throw Attempts" Width="175" Height="20"/>
            <Slider x:Name="FreeThrowAttemptsSlider" Canvas.Left="185" Canvas.Top="520" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.FreeThrowAttempts}" Minimum="0" Maximum="100" SmallChange="1" LargeChange="1" StepFrequency="1" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="527" Text="{x:Bind Path=FreeThrowAttemptsSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
            <TextBlock Canvas.Left="10" Canvas.Top="557" Text="Other Points" Width="175" Height="20"/>
            <Slider x:Name="OtherPointsSlider" Canvas.Left="185" Canvas.Top="550" Width="200" Value="{x:Bind Mode=TwoWay, Path=local:Weights.OtherPoints}" Minimum="0" Maximum="50" SmallChange="1" LargeChange="1" StepFrequency="1" ValueChanged="SliderValueChanged"/>
            <TextBlock Canvas.Left="410" Canvas.Top="557" Text="{x:Bind Path=OtherPointsSlider.Value, Mode=OneWay}" Width="75" Height="20"/>
        </Canvas>
    </ScrollViewer>
</Page>
